<%= render 'layouts/banner' %>
<%= render 'layouts/mainnav' %>

<div class='text-center'>
		<h3>Teams</h3>
</div>
<div class='row my-5'>
		<div class='col-3 text-center'>

			<% if @teams.length != 16 %>
					<div class='d-flex flex-row justify-content-center btn btn-md' data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style='cursor:pointer;'>
							<i class='bx bxs-user-plus' style='color:black; font-size: 30px; padding-top: 12px;' ></i>
							<h4 style='padding-top: 12px'>Team</h4>
					</div>
					<div class="collapse" id="collapseExample">
							<%= render 'layouts/teamform' %>
					</div>
			<%else%>
					<p> Game had started.<br>Click on respective team to update the score. </p>
			<%end%>
		</div>
		<div class='col-9 text-center'>
				<h6 class='mb-3'> All participating team </h6>
				<p> Total number of participating: <%=@teams.length%> </p>
				<div class='d-flex flex-wrap justify-content-around'>
					<% @teams.each do |team,index| %>
							<div class='d-flex flex-row justify-content-around'style='background-color: lightcoral; border-radius: 50px; height: 50px; width:200px; margin:20px;'>
									<p style="padding-top: 12px;"><%= team.team_name%></p>
									<div class='d-flex flex-row'>
											<div class='text-right'>
													<%= link_to team_path(team), method: :delete, data: {confirm: 'Are you sure you want to delete?'} do %>
															<i class='bx bx-x' style='color:black; font-size: 25px; padding-top: 12px;'></i>
													<% end %>
											</div>
											<div class='text-right'>
														<i class='bx bxs-pencil' style='color:black; font-size: 20px; padding-top: 12px; cursor:pointer;' data-toggle="modal" data-target="#example<%=team.id%>"></i>
											</div>
									</div>
							</div>
					<%= render 'layouts/scoremodal', team_name: team.team_name, team_id: team.id, team: team%>
					<% end %>
				</div>
		</div>
</div>